<!-- Page Content -->
<div id="content">
     <nav class="navbar navbar-expand-lg mb-4">
          <div class="container-fluid">
               <button type="button" id="sidebarCollapse" class="btn btn-dark">
                    <i class="fas fa-align-left"></i>
                    <span>Toggle Sidebar</span>
               </button>
          </div>
     </nav>

     <h2 class="mb-4">Welcome, <%= user.displayName %>!</h2>
     <form action="/upload" method="POST" enctype="multipart/form-data">
          <input type="file" name="image" accept="image/*" required />
          <button type="submit">Upload Image</button>
     </form>


     <div class="row">
          <!-- Recent Announcements -->
          <div class="col-md-12 mb-12">
               <div class="card shadow-sm">
                    <div class="card-header bg-primary text-white">
                         Recent Announcements
                    </div>
                    <div class="card-body p-0">
                         <table class="table table-striped table-hover mb-0">
                              <thead>
                                   <tr>
                                        <th>Image</th>
                                        <th>Breed</th>
                                        <th>Actions</th>
                                   </tr>
                              </thead>
                              <tbody>
                                   <% recentAnnouncements.forEach(announcement=> { %>
                                        <tr>

                                             <td>
                                                  <% if (announcement.images && announcement.images.length> 0) { %>
                                                       <img src="<%= announcement.images[0] %>" alt="Announcement Image" class="img-thumbnail" style="width: 60px; height: 60px; object-fit: cover;">
                                                       <% } else { %>
                                                            <span>No Image</span>
                                                            <% } %>
                                             </td>
                                             <td>
                                                  <%= announcement.breed %>
                                             </td>
                                             <td>
                                                  <a href="/announcement/<%= announcement._id %>" class="btn btn-sm btn-primary">
                                                       View
                                                  </a>
                                                  <form action="/announcements/<%= announcement._id %>/delete" method="POST" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this announcement?');">
                                                       <button type="submit" class="btn btn-sm btn-danger">
                                                            Delete
                                                       </button>
                                                  </form>
                                             </td>
                                        </tr>
                                        <% }) %>
                                             <% if (recentAnnouncements.length===0) { %>
                                                  <tr>
                                                       <td colspan="3" class="text-center">No recent announcements available.</td>
                                                  </tr>
                                                  <% } %>
                              </tbody>
                         </table>

                    </div>
               </div>
          </div>

          <!-- Recent Activity -->
